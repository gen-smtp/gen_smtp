%% -*- mode: erlang; -*-
{require_min_otp_vsn, "18"}.

{erl_opts,
 [fail_on_warning,
  debug_info,
  warn_unused_vars,
  warn_unused_import,
  warn_exported_vars,
  {platform_define, "18", 'OTP_18'}]}.

{xref_checks,
 [undefined_function_calls,
  undefined_functions,
  locals_not_used,
  %% exports_not_used,
  deprecated_function_calls,
  deprecated_functions
 ]}.

{xref_ignores,
 [
  {smtp_rfc822_parse, return_error, 2}
 ]}.

{deps, [{ranch, "1.6.1"},
        {hut, "1.3.0"}]}.

{profiles,
 [
  {dialyzer,
   [
    {deps,
     [
      {eiconv, "1.0.0"}
     ]
    },
    {dialyzer,
     [
      {plt_extra_apps,
       [
        eiconv,
        ssl,
        hut
       ]
      },
      {warnings,
       [error_handling,
        unknown
       ]}
     ]}
   ]},
  {ranch13,
   [{deps, [{ranch, "1.3.2"}]}]},
  {ranch20,
   [{deps,
     [{ranch, {git, "https://github.com/ninenines/ranch", {branch, "master"}}}]
    }]},
  {test, 
   [
    {cover_enabled, true},
    {cover_print_enabled, true},
    {deps,
     [
      {eiconv, "1.0.0"}
     ]}
   ]}
 ]}.
