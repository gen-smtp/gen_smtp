%% -*- mode: erlang; -*-
{require_min_otp_vsn, "18"}.

{erl_opts, 
 [fail_on_warning,
  debug_info,
  warn_unused_vars,
  warn_unused_import,
  warn_exported_vars]}.

{xref_checks,
 [undefined_function_calls,
  undefined_functions,
  locals_not_used,
  %% exports_not_used,
  deprecated_function_calls,
  deprecated_functions
 ]}.

{profiles, 
 [
  {dialyzer,
   [
    {deps,
     [
      {eiconv, ".*", {git, "git://github.com/zotonic/eiconv.git", {branch, "master"}}}
     ]
    },
    {dialyzer,
     [
      {plt_extra_apps,
       [
        eiconv,
        ssl
       ]
      },
      {warnings,
       [error_handling,
        unknown
       ]}
     ]}
   ]},

  {test,
   [
    {cover_enabled, true},
    {cover_print_enabled, true},
    {deps, 
     [
      {eiconv, "1.0.0-alpha1"}
     ]}
   ]}
 ]}.
